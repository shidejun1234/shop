<!--pages/my/my.wxml-->
<view class='personal_info'>
    <view class='photo_wrap'>
        <image src='{{userInfo.avatarUrl}}'></image>
    </view>
    <view class='nickname'>
        {{userInfo.nickName}}
    </view>
</view>
<view class='wode_item_wrap'>
    <view class='wode_item' wx:for="{{mode}}" wx:key="*this">
        {{item}}
        <image src="../../images/icon-arrow.png"></image>
    </view>
</view>