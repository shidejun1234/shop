.swiper{
    width: 100%;
}

.swiper image{
    width: 100%;
}

.goods-title{
    background: #ffffff;
}

.goods-name{
    margin-left: 20rpx;
}

.goods-price{
    display: flex;
    flex-direction: row;
    padding: 10rpx;
    color: #ff0000;
    font-size: 24rpx;
}

.goods-oldPrice{
    padding: 5rpx;
    color: #000000;
    font-size: 16rpx;
    text-decoration: line-through;
}

.goods-inventory-sales{
    margin-top: 1px;
    background: #ffffff;
    display: flex;
    flex-direction: row;
    color: #5e5e5e;
}

.goods-inventory-sales view{
    width: 50%;
    padding-left: 10rpx;
}

.goods-details{
    width: 100%;
    margin: 0px auto;
    background: #ffffff;
}

.goods-details-item{
    margin: 1px 10rpx 90rpx 10rpx;
}

.goods-bottom{
    width: 100%;
    height: 90rpx;
    position: fixed;
    bottom: 0px;
    display: flex;
    flex-direction: row;
    border-top: 1px solid #e5e5e5;
    background: #ffffff;
}

.goods-bottom-left{
    display: flex;
    flex-direction: row;
    width: 50%;
    text-align: center;
    font-size: 20rpx;
}

.goods-bottom-left-item{
    width: 33.3%;
    display: flex;
    flex-direction: column;
    border-right: 1px solid #e5e5e5;
}

.goods-bottom-left-item image{
    margin: 0 auto;
    width: 50rpx;
    height: 50rpx;
}

.goods-bottom-right{
    display: flex;
    flex-direction: row;
    width: 50%;  
    line-height: 90rpx;
    text-align: center;  
    font-size: 30rpx;
    color: #ffffff;
}

.goods-bottom-right-item{
    width: 50%;
}

.yellow{
    background: #f0aa30;
}

.red{
    background: #e64240;
}