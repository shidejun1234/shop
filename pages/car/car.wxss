.goodscar{
    background: #ffffff;
    display: flex;
    flex-direction: row;
    border-top: 1px solid #e5e5e5;
}

.goodscar-left{
    width: 20%;
    padding: 10rpx;
}

.goodscar-left image{
    width: 150rpx;
    height: 150rpx;
}

.goodscar-right{
    width: 80%;
    margin-top: 20rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
}

.goodscar-right-bottom{
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
}

.goodscar-right-bottom-left{
    width: 40%;
}

.goodscar-right-bottom-left text{
    font-size: 24rpx;
    color: #ff0000;
}

.goodscar-right-bottom-right{
    width: 60%;
    display: flex;
    flex-direction: row;    
}

.goodscar-right-bottom-right text{
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
}

.goodscar-right-bottom-right button{
    background: #ffffff;
    margin: 0;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
}

.no{
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    margin-top: 150rpx;
    text-align: center;
    color: #5e5e5e;
    font-size: 30rpx;
}

.no image{
    margin: 0 auto;
    text-align: center;
    width: 200rpx;
    height: 200rpx;
}

.no button{
    margin-top: 50rpx;
    width: 200rpx;
    color: #e5e5e5;
    background: #1ab41a;
    font-size: 30rpx;
}