.search{
    position: fixed;
    z-index: 99;
    top: 20rpx;
    display: flex;
    width: 80%;
    left: 10%;
}

.search input{   
    border-radius: 24rpx;
    width: 80%;
    margin: 0 auto;
    padding-left: 28rpx;
    text-align: center;
    font-size: 25rpx;
    background: #e5e5e5;
    opacity: 0.5;
}

.search image{
    position: fixed;
    z-index: 99;
    top: 28rpx;
    right: 20%;
    height: 40rpx;
    width: 40rpx;
}

.swiper{
    border: 1px solid #000000;
}

.category{
    border: 1px solid #000000;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.category-item{
    margin-left: 1%;
    margin-top: 1%;
    width: 18.8%;
    height: 150rpx;
}

.category-item image{
    width: 100%;
    height: 150rpx;
}

.scroll-view_H {
    white-space: nowrap;
}

.scroll-view-item_H {
    display: inline-block;
    width: 100%;
    height: 300rpx;
}

.brand-view{
    border: 1px solid #000000;
}

.brand-img{
    margin-left: 1%;
    width:32%;
    height: 210rpx;
    font-size: 26rpx;
}

.brand-img image {
    width: 100%;
    height: 210rpx;
}

.scroll-view{
    border: 1px solid #000000;
}

.scroll-img{
    margin-left: 1%;
    width:23.8%;
    height: 180rpx;
    font-size: 26rpx;
}

.scroll-img image {
    width: 100%;
    height: 180rpx;
}

.goods{
    display: flex;
    width: 100%;
    flex-direction: row;
    flex-wrap: wrap;
}

.half{
    margin: 10rpx auto;
    margin-top: 20rpx;
    width: 46%;
    text-align: center;
}

.half image{
    width: 100%;
}