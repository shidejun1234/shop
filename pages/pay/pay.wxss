/* pages/pay/pay.wxss */

.pay_address_wrap {
    background-color: #fff;
    padding: 10px;
    position: relative;
}

.address_icon {
    width: 20px;
    height: 20px;
    position: absolute;
    top: 10px;
    left: 10px;
}

.pay_address {
    font-size: 14px;
}

.pay_contact {
    margin-left: 30px;
    margin-bottom: 8px;
}

.pay_address_sel {
    position: absolute;
    width: 20px;
    height: 20px;
    right: 10px;
    top: 10px;
}

.pay_order_wrap {
    background-color: #fff;
    margin-top: 10px;
}

.table_header {
    padding: 10px;
    font-size: 14px;
    border-bottom: 1px solid #e5e5e5;
}

.table_goods_name {
    display: inline-block;
    width: 60%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.table_goods_num {
    display: inline-block;
    width: 15%;
    text-align: right;
}

.table_goods_con {
    display: inline-block;
    width: 25%;
    text-align: right;
}

.table_content_item {
    font-size: 12px;
    padding: 10px;
}

.pay_remarks {
    background-color: #fff;
    font-size: 14px;
    padding: 10px;
    margin-top: 10px;
}

.car_bot {
    position: fixed;
    width: 100%;
    background-color: #fff;
    bottom: 0px;
    border-bottom: 1px solid #e5e5e5;
    font-size: 14px;
}

.car_bot_wrap {
    padding: 10px;
    height: 30px;
    line-height: 30px;
}

.car_order_confirm {
    float: right;
    background: #ff7e3a;
    color: #fff;
    border-radius: 3px;
    width: 80px;
    text-align: center;
}

.car_total_monay {
    color: #f00;
    margin-left: 5px;
}

.bb{
    position: fixed;
    z-index: 99;
    height: 100%;
    width: 100%;
    top: 0px;
    padding: 64rpx 30rpx;
    background: #000000;
    opacity: 0.5;
    text-align: center;
    font-size: 28rpx;
}

.page-section {
    position: fixed;
    bottom: 50%;
    z-index: 99;
    left: 5%;
    right: 5%;
    padding: 64rpx 30rpx;
    background: #ffffff;
    text-align: center;
    font-size: 28rpx;
    border-radius: 22rpx;
}

.price {
    margin-top: 30rpx;
    margin-bottom: 25rpx;
    position: relative;
    display: inline-block;
    font-size: 78rpx;
    line-height: 1;
}